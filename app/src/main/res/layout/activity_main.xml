<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/operations_buttons"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/home_btn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            app:srcCompat="@mipmap/calculator" />

        <ImageButton
            android:id="@+id/currency_btn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@mipmap/currency" />
    </LinearLayout>



    <TextView
        android:id="@+id/solution_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/operations_buttons"
        android:layout_above="@+id/buttonPanel"
        android:text="0"
        android:textSize="40dp"
        android:textAlignment="textEnd"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/buttonPanel"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:textSize="25dp"
                android:layout_margin="12dp"
                android:id="@+id/ac_btn"
                android:text="AC"
                android:backgroundTint="@color/red"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:id="@+id/c_btn"
                android:text="C"
                android:backgroundTint="@color/purple_500"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:id="@+id/percentage_btn"
                android:text="%"
                android:backgroundTint="@color/purple_500"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:id="@+id/div_btn"
                android:text="/"
                android:backgroundTint="@color/purple_500"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:id="@+id/seven_btn"
                android:text="7"
                android:backgroundTint="@color/purple_500"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:id="@+id/eight_btn"
                android:text="8"
                android:backgroundTint="@color/purple_500"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:id="@+id/nine_btn"
                android:text="9"
                android:backgroundTint="@color/purple_500"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:id="@+id/sub_btn"
                android:text="*"
                android:backgroundTint="@color/purple_500"/>
        </LinearLayout><LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:id="@+id/four_btn"
            android:text="4"
            android:backgroundTint="@color/purple_500"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:id="@+id/five_btn"
            android:text="5"
            android:backgroundTint="@color/purple_500"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:id="@+id/six_btn"
            android:text="6"
            android:backgroundTint="@color/purple_500"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:id="@+id/minus_btn"
            android:text="-"
            android:backgroundTint="@color/purple_500"/>
    </LinearLayout><LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:id="@+id/one_btn"
            android:text="1"
            android:backgroundTint="@color/purple_500"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:id="@+id/two_btn"
            android:text="2"
            android:backgroundTint="@color/purple_500"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:id="@+id/three_btn"
            android:text="3"
            android:backgroundTint="@color/purple_500"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:id="@+id/plus_btn"
            android:text="+"
            android:backgroundTint="@color/purple_500"/>
    </LinearLayout><LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:id="@+id/som_btn"
            android:text=""
            android:backgroundTint="@color/purple_500"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:id="@+id/zero_btn"
            android:text="0"
            android:backgroundTint="@color/purple_500"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:id="@+id/delimeter_btn"
            android:text="."
            android:backgroundTint="@color/purple_500"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:id="@+id/equals_btn"
            android:text="="
            android:backgroundTint="@color/purple_500"/>
    </LinearLayout>
    </LinearLayout>


</RelativeLayout>
